<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_height="match_parent"
    android:background="#2f2f2f"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="techtrix.example.com.techtrix.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/gameActivity"
                android:padding="10dp"
                android:src="@drawable/circlegame"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Gaming"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/robotActivity"
                android:padding="10dp"
                android:src="@drawable/circlerobotics"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Robotics"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/codingActivity"
                android:padding="10dp"
                android:src="@drawable/circlecoding"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Coding"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/workshopActivity"
                android:padding="10dp"
                android:src="@drawable/circleworkshops"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Workshop"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/outoftheboxActivity"
                android:padding="10dp"
                android:src="@drawable/circleoutofthebox"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Out of the box"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/kaleidoscopeActivity"
                android:padding="10dp"
                android:src="@drawable/circlekaleidoscope"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="kaleidoscope"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/geeksActivity"
                android:padding="10dp"
                android:src="@drawable/circlegeeks"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="Geeks"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/guestlecturesActivity"
                android:padding="10dp"
                android:src="@drawable/circleguestlecture"
                android:background="#2f2f2f"
                android:scaleType="fitCenter"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="guest lectures"
                android:textColor="@color/textColor"
                android:background="#2f2f2f"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
