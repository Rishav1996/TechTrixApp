<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="techtrix.example.com.techtrix.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:id="@+id/content_about"
    android:layout_height="match_parent"
    android:background="#2f2f2f">
    <TextView
        android:id="@+id/head"
        android:text="TechTrix\'17"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/textColor"
        android:fontFamily="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ver"
        android:layout_below="@id/head"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:text="Version 1.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/ver"
        android:id="@+id/logo"
        android:src="@drawable/techlogo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <TextView
        android:layout_below="@id/logo"
        android:paddingLeft="50dp"
        android:id="@+id/quote"
        android:paddingRight="50dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textColor"
        android:text="into the next dimension"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:text="tech"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:text="trix"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/textColor"
            android:text="Developed by Rishav Saigal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:autoLink="email"
            android:linksClickable="true"
            android:text="rishavsaigal@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
