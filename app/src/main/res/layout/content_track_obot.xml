<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:background="@color/backColor"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="techtrix.example.com.techtrix.TrackOBot"
    tools:showIn="@layout/activity_track_obot">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/textColor"
            android:padding="10dp"
            android:text="Dot to dot....Line to line....tiptoe the line till the end."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="25sp"
            android:text="EVENT DETAILS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="PRIZE: CASH PRIZE OF ₹5000 + GOODIES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="25sp"
            android:text="RULES AND REGULATIONS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="General Rules "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="10dp"
            android:text=" * Round 1 track will be made public two days before the event.\n
* Round 2 track will be made public only after the successful completion of round 1 and publication of 2nd round qualifiers.\n
* No two teams should participate with the same robot.\n
* Computers, programmers and software need to be arranged by the team themselves. We will provide two/three pin sockets with proper ground connection.\n
* The competition is only for autonomous robots, no manual robots will be entertained.\n
* The robots should be able to process data on-board. No remotely kept computer should control the robots.\n
* The robots have to be designed by the team itself.\n
* Usage of commercially available modules such as sensors, development boards, etc. are allowed; but it is forbidden to use complete robotic-system which is sold readymade for the purpose of this competitions such as Lego kits."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="Final Point Calculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="10dp"
            android:text=" * Time taken to complete track will be only awarded to participants who complete the track. Those who fail to complete the entire track or quit midway will not be awarded any points and loses their chance to go to next levels.\n
* Time taken to complete track= T \n
* Equivalent point= T X 10 \n
* Point scored after crossing the section= P \n
* Final Score= P-(T X 10)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="Robot Specification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="10dp"
            android:text=" * The robot should fit in a box of dimension 30cm x 30cm \n
* No limitations on height. \n
* The maximum weight should not be more than 3 kg. \n
* The robot can be powered electrically only (internal or external). \n
* The electric voltage between 2 points should not be more than 20V DC at any point of time in the run."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:textColor="@color/textColor"
            android:src="@drawable/trackobotarena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="10dp"
            android:text="Note : Rules are Subject to Change if Circumstances Demands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/textColor"
            android:text="REGISTRATION FEE: ₹100 (per team of 5 or less)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textSize="25sp"
            android:textColor="@color/textColor"
            android:text="TIMING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/textColor"
            android:linksClickable="true"
            android:autoLink="all"
            android:text="Starts at 25th February (Saturday)\n
* On-Spot Registration\n
* Show your interest in this event by registering here -> bit.ly/2l8Xnhn."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:textSize="25sp"
            android:text="EVENT COORDINATOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:linksClickable="true"
            android:autoLink="phone"
            android:padding="5dp"
            android:text="SHASHANK SHEKHAR 9874695816"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
